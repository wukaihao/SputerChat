<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/item_image"
			android:layout_marginLeft="5dp"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:background="#b1b1b1"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="5dp">
			<TextView
				android:id="@+id/item_text_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="" />
			<TextView
				android:id="@+id/item_text_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="5dp"
				android:lines="3"
				android:textSize="16dp"
				android:ellipsize="end"
				android:paddingBottom="5dp"
				android:text="" />
			<chat.tox.antox.adapter.NoScrollGridView
			android:id="@+id/item_image_gridView"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:numColumns="3" />
			<!--<ImageView-->
				<!--android:id="@+id/item_image_1"-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="120dp" />-->
			<RelativeLayout
				android:gravity="center_vertical"
				android:layout_height="wrap_content"
				android:layout_width="match_parent">
				<TextView
					android:id="@+id/itrm_publish_time"
					android:layout_alignParentLeft="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2天前" />
				<ImageButton
					android:layout_width="30dp"
					android:layout_height="15dp"
					android:id="@+id/item_image_parise"
					android:layout_toLeftOf="@+id/item_image_penglun"
					android:background="#1e61ce"/>
				<ImageButton
					android:layout_width="30dp"
					android:layout_height="15dp"
					android:id="@+id/item_image_penglun"
					android:layout_marginRight="10dp"
					android:layout_alignParentRight="true"
					android:background="#7c1ece"/>
			</RelativeLayout>
			<LinearLayout
				android:id="@+id/item_linear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@drawable/detail">
				<TextView
					android:id="@+id/item_text_parise"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:drawableLeft="@drawable/likeicon"
					android:text="" />
				<TextView
					android:id="@+id/item_list_penglun"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="" />
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>

</LinearLayout>
