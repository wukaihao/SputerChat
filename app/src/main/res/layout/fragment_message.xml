<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/contact_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_absolute"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contact_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="0.6"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="-10dp"
            android:src="@drawable/ic_action_search"
            android:background="@drawable/search_leftradius"/>

        <EditText
            android:layout_weight="4"
            android:id="@+id/searchBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/search_rightradius"
            android:hint="@string/search_all_message"
            android:textSize="20sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_darker"
            android:typeface="normal"
            android:windowSoftInputMode="stateHidden"/>
        <ImageView
            android:layout_weight="0.8"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/contacts_add"
            android:scaleType="center"
            android:onClick="onClickAdd"/>

    </LinearLayout>

    <TextView
        android:id="@+id/center_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/main_recent_no"
        android:textColor="@color/grey_darker"
        android:textSize="@dimen/text_large"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/last_message_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white_absolute"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="true"/>


    </RelativeLayout>

    <EditText
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="常聊联系人"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:background="@null"/>

    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="10dp" >

                <GridView
                    android:id="@+id/grid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" >
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
    <EditText
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="更多对话"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:background="@null"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/list_message_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white_absolute"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="true"/>


    </RelativeLayout>

</LinearLayout>
